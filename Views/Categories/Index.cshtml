@model  IEnumerable<OrganizeYourCourses.Models.Category>

        @{
            ViewData["Title"] = "Categories";
        }

        <h1>Categories</h1>

        <div class="container-fluid d-flex justify-content-around flex-wrap">
      
            @foreach (var item in Model)
            {
                <div class="card" style="width: 18rem; margin: 2%">
                    <img src="~/img/Category/@Html.DisplayFor(modelItem=> item.ImgPath)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">Some quick example text</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            }

        </div>


   
