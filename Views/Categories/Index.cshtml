@model IEnumerable<OrganizeYourCourses.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>


@if (Model.Count() > 0)
{
<div class="container-fluid d-flex justify-content-around flex-wrap" >
    @foreach (var item in Model)
    {
    <div class="card" style="width: 18rem; margin: 2%">
        @if (String.IsNullOrEmpty(item.ImgPath))
        {<img src="~/img/Category/default-category.png" style="background-color:@(item.Color)"  class="card-img-top"> }
        else
        {<img src="~/img/Category/@Html.DisplayFor(modelItem => item.ImgPath)" class="card-img-top">}
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text">Some quick example text</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
    }
</div>
<div class="d-flex justify-content-end" style="margin-top:5%">
    <a asp-action="Select" class="btn btn-light">Manage categories</a>
</div>
}
else
{
<div class="container-fluid d-flex align-content-center flex-column" style="margin-top:5%">
    <h3>Ups.. no category to show</h3>
    <p>
        It looks like you don't ad any category to your courses organizer <br />
        Select one from predefinied category or add your own category by buttons below
    </p>
    <div>
        <a asp-action="Select" class="btn btn-light">Select</a>
        <a asp-action="Index" class="btn btn-light">Add</a>
    </div>
</div>
}





