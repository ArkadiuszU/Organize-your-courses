@model OrganizeYourCourses.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h4>Create new category</h4>

<div class="row d-flex align-content-center vh-75" >
    <div class="col-md-4 mt-auto mb-auto" >
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-5" >
                    <label asp-for="Color" class="control-label"></label>
                    <input type="color" asp-for="Color" class="form-control" value="#ff0000">
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
    <div class="col-2"></div>
    <div class="col-6 rounded-left">
        <img class="img-fluid shadow-lg  " src="~/img/person-984236_1920.jpg" style="border-top-left-radius: 40% ; border-bottom-left-radius: 250px ; border-bottom-right-radius: 40%"  />       
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

